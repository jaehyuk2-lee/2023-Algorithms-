#include <iostream>
#include <vector>
#include <random>
using namespace std;

random_device rd;
mt19937 gen(rd());
uniform_int_distribution<int> dis(0, 9);

class DoorLock {
public:
    DoorLock() {
    }
    
    void SetPwd(int a) {
        for(int i = 0; a != 0; i++) {
            password.insert(password.begin(), (a % 10));
            a /= 10;
        }
    }
    
    void PrintPwd() {
        for(int i = 0; i < password.size(); i++) {
            cout << password[i];
        }
        cout << endl;
    }
    
    
    void SetScreen() {
        for(int i = 0; i < 10; i++) {
            picked[i] = 0;
        }
        
        for(int i = 0; i < 4; i++) {
            for(int j = 0; j < 3; j++) {
                int num = dis(gen);
                if((i==3&&j==0)||(i==3&&j==2)) continue;
                else if(picked[num]==1) {
                    j--;
                    continue;
                }
                screen[i][j] = num;
                picked[num] = 1;
            }
        }
    }
    
    void PrintScreen() {
        for(int i = 0; i < 4; i++) {
            for(int j = 0; j < 3; j++) {
                if(i==3&&j==0){
                    cout << '*' << " "; continue;
                }
                else if(i==3&&j==2){
                    cout << '#' << " "; continue;
                }
                
                cout << screen[i][j] << " ";
            }
            cout << endl;
        }
    }
    
    void Unlock() {
        int y, x;
        do {
            SetScreen();
            PrintScreen();
            cin >> y >> x;
            if((y!=4)||(x!=1)) {
                input.push_back(screen[y-1][x-1]);
            }
            cout << endl;
        } while(y!=4||x!=1);
        
        if(password == input) cout << "Unlock" << endl;
        else cout << "Wrong password" << endl;
    }
    
private:
    vector<int> password;
    vector<int> input;
    bool picked[10] = {0};
    int screen[4][3] = {0};
};

int main() {
    DoorLock Home;
    Home.SetPwd(2110);
    Home.PrintPwd();
    Home.Unlock();
}
