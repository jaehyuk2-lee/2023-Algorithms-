#include <iostream>
#include <limits>
using namespace std;

const int MIN = numeric_limits<int>::min();
int fastestMaxSum(int* arr, int size) {
    int ret = MIN, psum = 0;
    for(int i = 0; i < size; i++) {
        psum = max(psum, 0) + arr[i];
        ret = max(psum, ret);
    }
    return ret;
}

int main()
{
    int arr[8] = {-7, 4, -3, 6, 3, -8, 3, 4};
    
    cout << fastestMaxSum(arr, 8) << endl;
}
//O(N)
