#include <iostream>
#include <vector>
using namespace std;

class DoorLock {
public:
    DoorLock() {
    }
    
    void SetPwd(int a) {
        for(int i = 0; a != 0; i++) {
            password.insert(password.begin(),(a % 10));
            a /= 10;
        }
    }
    
    void PrintPwd() {
        for(int i = 0; i < password.size(); i++) {
            cout << password[i];
        }
    }
    
private:
    vector<int> password;
    int screen[4][3];
};

int main() {
    DoorLock Home;
    Home.SetPwd(2110);
    Home.PrintPwd();
}
